@model IEnumerable<WebApplication7.Models.student>
<h1 class="text-black font-monospace">Student Management System</h1>
<br /><br />


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Department</th>
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
        <tr>
            <td scope="row">@item.id</td>
            <td>@item.name</td>
            <td>@item.email</td>
            <td>@item.password</td>
                <td>@item.department</td>
                <td>@item.date</td>

            <td>
                <a asp-action="edit" asp-route-id="@item.id"><button class="btn btn-primary">Edit</button></a>
                    <a asp-action="delete" asp-route-id="@item.id"><button class="btn btn-danger">Delete</button></a>
            </td>
        </tr>
        }
    </tbody>
</table>
