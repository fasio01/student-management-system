@model student
<br />
<h1 class="text-black text-capitalize">Student Management System</h1>
<br />
<br />
<form method="post" asp-action="edit" asp-controller="Home">
    <label>Name</label>
    <br />
    <input type="text" asp-for="name" class="w-50 p-1" />
    <br />
    <span asp-validation-for="name" class="text-danger"></span>
    <br />
    <label>Email Address</label>
    <br />
    <input type="text" asp-for="email" class="w-50 p-1" />
    <br />
    <span asp-validation-for="email" class="text-danger"></span>
    <br />
    <label>Password</label>
    <br />
    <input type="text" asp-for="password" class="w-50 p-1" />
    <br />
    <span asp-validation-for="password" class="text-danger"></span>
    <br />
    <label>Department</label>
    <br />
    <select asp-for="department" class="w-50 p-1">
        <option value="" disabled selected>--Select--</option>
        <option value="computer science">computer science</option>
        <option value="pre engineering">pre engineering</option>
        <option value="commerce">commerce</option>

    </select>
    <br />
    <span asp-validation-for="department" class="text-danger"></span>
    <br />
    <label>Date</label>
    <br />
    <input type="date" asp-for="date" class="w-50 p-1" />
    <br />
    <span asp-validation-for="date" class="text-danger"></span>
    <br /></br>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>
